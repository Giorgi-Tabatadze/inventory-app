extends layout

block content
  h1= title
  
  form(action="", method="post") 
    div.form-group 
        label(for="name") Category Name: 
        input#name.form-control(required type="text", name="name" value=(category === undefined ? "": category.name))

    button.btn.btn-primary(type="submit") Submit 

    if errors 
        ul 
            for error in errors 
                li!= error.msg 