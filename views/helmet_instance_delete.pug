extends layout

block content
  h1= title

  div 
    table 
        tr 
            td
                img(src=helmet_instance.photoUrl , alt="Helmet preview")
                td #[strong Size:] #{helmet_instance.size}
                td #[strong Color:] #{helmet_instance.color}
                td #[strong Amount:] #{helmet_instance.amount}
    div 
            form(action="", method="post") 
                h3 Are you sure you want to delete this helmet instance?
                label(for="password") Admin Password: 
                input#password.form-control(required type="password", name="password")
                input#helmet_intance_id.form-control(type='hidden',name='helmet_intance_id', required='true', value=helmet_instance._id )
                button.btn.btn-primary(type="submit") Submit 
  if errors 
    ul 
        for error in errors 
            li!= error.msg 

